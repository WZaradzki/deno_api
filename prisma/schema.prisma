generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["deno"]
  output          = "../generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id        String   @id
  name      String   @unique
  createdAt DateTime @default(now())
  User      User[]

  @@index([name])
}

model User {
  id        String    @id
  email     String    @unique
  name      String?
  surname   String?
  updatedAt DateTime
  createdAt DateTime  @default(now())
  deleted   DateTime?
  role      Role      @relation(fields: [roleId], references: [id])
  roleId    String

  @@index([createdAt])
  @@index([email])
  @@index([name, surname])
}
